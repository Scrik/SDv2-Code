{
    "name": "arrow768/sdv2",
    "description": "SourceDonatesv2",
    "require": {
        "laravel/framework": "4.2.*",
        "cartalyst/sentinel": "1.0.*",
        "arrow768/sdv2pp-paypal": "@dev",
        "arrow768/sdv2ip-storeag": "@dev"
    },
    "autoload": {
        "classmap": [
            "app/commands",
            "app/controllers",
            "app/models",
            "app/database/migrations",
            "app/database/seeds",
            "app/tests/TestCase.php"
        ]
    },
    "scripts": {
        "pre-install-cmd": [
        ],
        "post-install-cmd": [
            "php artisan optimize",
            "php artisan migrate",
            "php artisan migrate --package=cartalyst/sentry"
        ],
        "pre-update-cmd": [
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/sourcedonates/SDv2PP-PayPal.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/sourcedonates/SDv2Ip-StoreAg.git"
        },
        {
            "type": "composer",
            "url": "http://packages.cartalyst.com"
        }
    ]
}
